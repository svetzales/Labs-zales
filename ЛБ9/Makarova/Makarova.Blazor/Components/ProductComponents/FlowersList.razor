@using Flowers.Domain.Entities
@using Yeroma.Blazor.Services
@implements IDisposable
@rendermode InteractiveServer

<h3>Букеты</h3>
@if (ProductService.Products != null && ProductService.Products.Count() != 0)
{
    <table class="table table-striped">
        <thead>
        <th>Название</th>
        <th></th>
            @foreach (var item in ProductService.Products)
            {
            <tr>
                <td>@item.Name</td>
                <td>
                    <button class="btn btn-outline-dark"
                            @onclick="@(()=>OnFlowersSelected(item.Id))">
                        Подробно
                    </button>
                </td>
            </tr>
            }
        </thead>
    </table>
}

@code {
    [CascadingParameter]
    public IProductService<Flower> ProductService { get; set; }
    [Parameter]
    public EventCallback<int> FlowersSelected { get; set; }
    protected override async Task OnInitializedAsync()
    {
        ProductService.ListChanged += StateHasChanged;
    }
    public async void OnFlowersSelected(int id)
    {
        await FlowersSelected.InvokeAsync(id);
    }
    public void Dispose()
    {
        ProductService.ListChanged -= StateHasChanged;
    }
}